<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Nullable>enable</Nullable>
    <SignAssembly>False</SignAssembly>
    <PackageId>Zimmy.PowerShell.Testing.Framework</PackageId>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>PowerShell Testing Framework</Title>
    <Company />
    <Authors>Torsten Zimmermann</Authors>
    <Description>Components for testdriven development of PowerShell cmdlets</Description>
    <Copyright>Copyright Â© 2023</Copyright>
    <PackageTags>PowerShell, C#</PackageTags>
    <PackageOutputPath>$(OutputPath)\NuGet</PackageOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.PowerShell.SDK" Version="7.3.6" />
    <PackageReference Include="PowerShellStandard.Library" Version="5.1.1" />
  </ItemGroup>

</Project>
